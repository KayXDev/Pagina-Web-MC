# MongoDB
# Usa el string exacto de MongoDB Atlas (Connect -> Drivers) y reemplaza <password>.
# IMPORTANTE: el host NO es "cluster.mongodb.net"; será algo como "cluster0.xxxxx.mongodb.net".
MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.xxxxx.mongodb.net/<db>?retryWrites=true&w=majority&appName=Cluster0

# NextAuth
NEXTAUTH_URL=http://localhost:3000
# Genera un secreto fuerte (32+ bytes aleatorios). Ejemplo (macOS): `openssl rand -base64 32`
NEXTAUTH_SECRET=change-me-in-production

# Recomendado en Vercel
# NEXTAUTH_TRUST_HOST=true

# Server Info
MINECRAFT_SERVER_IP=play.tuservidor.com
MINECRAFT_SERVER_PORT=25565

# Minecraft account linking
# true = online-mode (resuelve UUID real en Mojang)
# false = offline-mode (genera UUID offline basado en el nick)
MC_ONLINE_MODE=true

# Shop
SHOP_CURRENCY=EUR

# Automatic in-game delivery (server plugin)
# Set a strong secret. The plugin must send it via header `x-delivery-key` (or Bearer token).
DELIVERY_API_KEY=change-me
# Optional max retries before marking delivery as FAILED
DELIVERY_MAX_ATTEMPTS=10

# PayPal (Checkout)
# PAYPAL_ENV: sandbox | live
PAYPAL_ENV=sandbox
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=

# Stripe (Tarjetas / Apple Pay)
# Crea una cuenta en Stripe y copia tus claves.
# Webhook: configura el endpoint apuntando a /api/shop/stripe/webhook
STRIPE_SECRET_KEY=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# Admin Initial Credentials
ADMIN_EMAIL=admin@tuservidor.com
ADMIN_PASSWORD=changeme123

# Site Info
SITE_NAME=Mi Servidor
SITE_URL=http://localhost:3000

# Email (SMTP) - requerido para "Forgot password"
# Ejemplo: Mailgun/Sendgrid/tu proveedor SMTP
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM="Mi Servidor <no-reply@tudominio.com>"

# Redes (si se usan en server/components)
DISCORD_URL=https://discord.gg/TU_INVITE
TIKTOK_URL=https://tiktok.com/@tu_servidor
YOUTUBE_URL=https://youtube.com/@tu_servidor

# Public Environment Variables (accesibles desde el cliente)
NEXT_PUBLIC_MINECRAFT_SERVER_IP=play.tuservidor.com
NEXT_PUBLIC_MINECRAFT_SERVER_PORT=25565
NEXT_PUBLIC_DISCORD_URL=https://discord.gg/TU_INVITE
NEXT_PUBLIC_TIKTOK_URL=https://tiktok.com/@tu_servidor
NEXT_PUBLIC_YOUTUBE_URL=https://youtube.com/@tu_servidor

# Uploads (producción en Vercel recomendado)
# Opción A (1 variable):
# CLOUDINARY_URL=cloudinary://API_KEY:API_SECRET@CLOUD_NAME
# Opción B (3 variables):
# CLOUDINARY_CLOUD_NAME=
# CLOUDINARY_API_KEY=
# CLOUDINARY_API_SECRET=

# Vercel Blob (uploads en Vercel sin Cloudinary)
# Crea un Blob Store en Vercel y genera un token con permisos Read/Write.
BLOB_READ_WRITE_TOKEN=

# Chatbot (OpenAI)
# Chatbot (Groq - suele tener tier gratis limitado)
GROQ_API_KEY=
# Opcional
GROQ_MODEL=llama-3.1-8b-instant

# Tickets AI (Ollama - local/gratis)
# Activa respuestas automáticas en el chat de tickets.
TICKETS_AI_ENABLED=true
# Proveedor para tickets: ollama | groq | auto
# - ollama: usa Ollama local
# - groq: usa Groq (requiere GROQ_API_KEY)
# - auto: intenta Ollama y si falla usa Groq
TICKETS_AI_PROVIDER=ollama
# URL base de Ollama (por defecto: http://127.0.0.1:11434)
OLLAMA_BASE_URL=http://127.0.0.1:11434
# Modelo (por defecto: llama3.1)
OLLAMA_MODEL=llama3.1

# Staff applications form (Home)
# Set to true to enable sending applications to /admin/postulaciones
NEXT_PUBLIC_STAFF_APPLICATIONS_OPEN=false

# Cron (opcional)
# Si lo defines, el endpoint /api/cron/services-status exigirá este secreto por header `x-cron-secret`
# o query `?secret=`. Si NO lo defines y usas Vercel Cron, se permitirá por User-Agent `vercel-cron/1.0`.
CRON_SECRET=

# RCON (opcional)
# Usado para obtener lista de jugadores conectados (para el widget de Admins online)
# cuando el status público no expone nombres. Requiere tener RCON activado en el servidor.
RCON_HOST=
RCON_PORT=25575
RCON_PASSWORD=
